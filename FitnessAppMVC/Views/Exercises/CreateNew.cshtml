@model FitnessAppMVC.Form.Exercises.CreateNewExercisesForm

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col">
        <div class="card card-outline-secondary">
            <div class="card-body">
                @using (Html.BeginRouteForm($"/exercises", FormMethod.Post))
                {
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.Name, "Название")</label>
                        <div class="col-md-9">
                            @Html.TextBox(model => model.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.WorkoutType, "Только аренда от собственников")</label>
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.WorkoutType, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.RentPriceFrom, "Цена аренды от (грн.)")</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.RentPriceFrom, new { @class = "form-control", type = "number", min = 0, max = int.MaxValue, step = 100 })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.RentPriceTo, "Цена аренды до (грн.)")</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.RentPriceTo, new { @class = "form-control", type = "number", min = 0, max = int.MaxValue, step = 100 })
                        </div>
                    </div>

                    <div class="my-3"></div>

                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.Sale, "Уведомлять о продаже")</label>
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.Sale, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.OnlyOwnerSale, "Только продажа от собственников")</label>
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.OnlyOwnerSale, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.SalePriceFrom, "Цена продажи от ($)")</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.SalePriceFrom, new { @class = "form-control", type = "number", min = 0, max = int.MaxValue, step = 100 })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label form-control-label">@Html.LabelFor(model => model.SalePriceTo, "Цена продажи до ($)")</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.SalePriceTo, new { @class = "form-control", type = "number", min = 0, max = int.MaxValue, step = 100 })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <input type="submit" class="btn btn-primary" value="Сохранить">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


